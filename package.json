{
  "name": "studio-sqlite",
  "private": true,
  "version": "0.0.0",
  "main": "backend/src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch backend/src --watch _example --ext js,ts --exec 'npm run build && node --loader ts-node/esm _example/index.ts'",
    "lint": "eslint .",
    "watch": "tsc --watch",
    "backend": "node --watch build/index.js",
    "dev:backend": "concurrently \"npm run watch\" \"npm run backend\"",
    "dev:frontend": "npm run dev --prefix ./frontend",
    "check-types": "tsc",
    "prettier": "prettier --write .",
    "build:backend": "tsc",
    "build:frontend": "npm run build --prefix ./frontend",
    "build": "tsc && npm run build:frontend",
    "start": "npm run build && NODE_ENV=production node --loader ts-node/esm ./_example/index.ts"
  },
  "repository": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@wordpress/components": "^29.7.0",
    "better-sqlite3": "^11.9.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.28",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "eslint": "^8.57.1",
    "eslint-plugin-prettier": "^5.2.5",
    "nodemon": "^3.1.9",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
